{
  "name": "saedan-family-tree",
  "version": "3.0.0",
  "description": "تطبيق آل سعيدان الشامل مع المزامنة الفورية - Real-time Family Management Application with Database Sync",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "vite",
    "dev:wrangler": "wrangler pages dev dist --d1=saedan-family-realtime --local --ip 0.0.0.0 --port 3000",
    "build": "vite build && cp index.html dist/",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name saedan-family-tree",
    "db:create": "wrangler d1 create saedan-family-realtime",
    "db:migrate:local": "wrangler d1 migrations apply saedan-family-realtime --local",
    "db:migrate:prod": "wrangler d1 migrations apply saedan-family-realtime",
    "db:seed": "wrangler d1 execute saedan-family-realtime --local --file=./migrations/0002_seed_initial_data.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute saedan-family-realtime --local",
    "db:console:prod": "wrangler d1 execute saedan-family-realtime",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 delete all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs --nostream",
    "clean": "rm -rf dist .wrangler",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/test"
  },
  "keywords": [
    "family-tree",
    "arabic",
    "genealogy", 
    "family-management",
    "real-time-sync",
    "cloudflare-d1",
    "hono",
    "saudi-arabia"
  ],
  "author": "Salman Saedan <info@salmansaedan.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/salmansaedan/my-family.git"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "vite": "^5.0.0",
    "wrangler": "^3.78.0",
    "typescript": "^5.0.0"
  }
}